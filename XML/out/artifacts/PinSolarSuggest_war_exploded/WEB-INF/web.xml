<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>duongdd.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeElectricProductServlet</servlet-name>
        <servlet-class>duongdd.servlet.HomeElectricProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCaculateServlet</servlet-name>
        <servlet-class>duongdd.servlet.AddToCaculateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaculateMoneyServlet</servlet-name>
        <servlet-class>duongdd.servlet.CaculateMoneyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemServlet</servlet-name>
        <servlet-class>duongdd.servlet.RemoveItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>duongdd.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAddFormServlet</servlet-name>
        <servlet-class>duongdd.servlet.ShowAddFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewProductServlet</servlet-name>
        <servlet-class>duongdd.servlet.AddNewProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PinSolarSuggestServlet</servlet-name>
        <servlet-class>duongdd.servlet.PinSolarSuggestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaculatePinSolarServlet</servlet-name>
        <servlet-class>duongdd.servlet.CaculatePinSolarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvertSuggestServlet</servlet-name>
        <servlet-class>duongdd.servlet.InvertSuggestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/DispatcherServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeElectricProductServlet</servlet-name>
        <url-pattern>/HomeElectricProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCaculateServlet</servlet-name>
        <url-pattern>/AddToCaculateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaculateMoneyServlet</servlet-name>
        <url-pattern>/CaculateMoneyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemServlet</servlet-name>
        <url-pattern>/RemoveItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAddFormServlet</servlet-name>
        <url-pattern>/ShowAddFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewProductServlet</servlet-name>
        <url-pattern>/AddNewProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PinSolarSuggestServlet</servlet-name>
        <url-pattern>/PinSolarSuggestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaculatePinSolarServlet</servlet-name>
        <url-pattern>/CaculatePinSolarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvertSuggestServlet</servlet-name>
        <url-pattern>/InvertSuggestServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>DispatcherServlet</welcome-file>
    </welcome-file-list>
</web-app>